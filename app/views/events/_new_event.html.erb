<div id="form_for_new_event">

  <h2>Create an Event for <%= @friend.first_name %></h2>


  <%= form_for ([@friend, @event]) do |f| %>
  <!-- I'm wondering if we'll need a new model for the text/email fields... -->
  <p>
    <%= f.label :description %>
    <span>
      <%= f.select :description, options_for_select(["Birthday", "Anniversary", "Other"]) %>
      <%= f.text_field :title, :id => "other_event", :placeholder => "Type of reminder" %>
    </span>
  </p>
  <%= f.label :date %>
  <span>
    <%= f.date_field :date, value: @event.date if @event %>
  </span>
  <p>
   <%= f.label :notification_date %>
   <span>
     <%= f.datetime_local_field :notification_date %>
   </span>
 </p>
 <p>
  <%= f.label :frequency %>
  <span>
  <%= f.select( :frequency, options_for_select(["Once", "Weekly", "Bi-weekly", "Monthly", "Quarterly", "Bi-annually"])) %>
  </span>
</p>
<p>
  <%= f.label "Select type of notification" %>
  <span>
    <%= f.select :notificationtype, options_for_select(["Text Message", "Email", "Both"]) %>
    <span>
    </p>
    <p>
     <%= f.button "Create Event" %>
   </p>
   <% end %>
 </div>
