<div class="div_to_update_event">

  <h2>Update <%= @friend.first_name %>'s Annual Recurring "<%= @event.description %>" Event <%= button_to 'delete event', friend_event_path(@friend, @event), method: 'delete', class: "btn-danger" %></h2>

  <%= form_for ([@friend, @event]), html: {name: 'edit_annual_event_form', class: 'form_to_update_annual_events'} do |f| %>
  <!-- I'm wondering if we'll need a new model for the text/email fields... -->
    <p>
     <%= f.label :description %>
     <span>
       <%= f.text_field :description, :value => @event.description %>
     </span>
    </p>

    <p>
      <%= f.label :date %>
      <span>
        <%= f.date_field :date, value: @event.date %>
      </span>
    </p>

    <p>
      <%= f.label :notification_date %>
      <span>
        <%= f.datetime_local_field :notification_date, value: @event.notification_date %>
      </span>
    </p>

    <p>
      <%= f.label "Select type of notification" %>
      <span>
        <%= f.select :notificationtype, options_for_select(["Text Message", "Email", "Both"], @event.notificationtype ) %>
      </span>
    </p>

    <p>
       <%= button_tag "Update Event", class: 'btn-danger' %>
  <% end %>
    </p>
</div>

